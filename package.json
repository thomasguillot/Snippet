{
	"name": "snippet",
	"version": "2.1.0",
	"description": "Snippet â€” grab audio from the web. Desktop app to download or upload MP4, trim, and save as MP3.",
	"main": "main.js",
	"scripts": {
		"dev": "tsc -p tsconfig.json && concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
		"dev:vite": "vite",
		"download-yt-dlp": "node scripts/download-yt-dlp.js",
		"prebuild": "npm run download-yt-dlp",
		"build": "npm run lint && tsc -p tsconfig.json && vite build",
		"build:electron": "electron-builder",
		"start": "electron .",
		"preview": "vite preview",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,scss,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,scss,json,md}\"",
		"check": "npm run lint && npm run format:check",
		"prepare": "husky"
	},
	"dependencies": {
		"ffmpeg-static": "^5.2.0",
		"fluent-ffmpeg": "^2.1.2",
		"yt-dlp-wrap": "^2.3.12"
	},
	"devDependencies": {
		"@eslint/js": "^9.15.0",
		"@types/node": "^20.10.0",
		"concurrently": "^8.2.2",
		"electron": "^28.0.0",
		"electron-builder": "^24.9.1",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.12.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"sass": "^1.69.0",
		"sass-embedded": "^1.77.0",
		"typescript": "^5.3.0",
		"typescript-eslint": "^8.15.0",
		"vite": "^5.0.8",
		"wait-on": "^7.2.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{scss,css,json,md}": [
			"prettier --write"
		]
	},
	"build": {
		"appId": "app.snippet",
		"productName": "Snippet",
		"mac": {
			"category": "public.app-category.utilities",
			"target": "dmg",
			"icon": "build/app.icns"
		},
		"asarUnpack": [
			"**/node_modules/ffmpeg-static/**",
			"bin/**"
		],
		"files": [
			"dist/**/*",
			"main.js",
			"preload.js",
			"package.json",
			"bin/**"
		]
	}
}
